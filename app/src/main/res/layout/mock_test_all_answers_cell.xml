<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/qTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question:"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/mockTestAllAnswersCellQTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qTitle"
        android:padding="10dp"
        />



    <TextView
        android:id="@+id/mockTestAllAnswersCellAnsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mockTestAllAnswersCellQTextView"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/mockTestAllAnswersCellAnsExpTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mockTestAllAnswersCellAnsTextView"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>